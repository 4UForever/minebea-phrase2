<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_normal"
    android:paddingBottom="@dimen/space_normal"
    android:paddingRight="@dimen/space_normal"
    android:gravity="center_horizontal"
    android:weightSum="40">

    <Spinner
        android:id="@+id/spinner_additional_ng_list_item"
        style="@style/spinner_wh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="16" />

    <EditText
        android:id="@+id/edit_additional_ng_serial_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:textSize="@dimen/textSizeNormal"
        android:textColor="@color/black"
        android:gravity="left|center_vertical"
        android:padding="@dimen/md_button_padding_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radiobtn_additional_ng1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:checked="false"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radiobtn_additional_ng2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center_vertical">

        <Button
            android:id="@+id/btn_ng_additional_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="@drawable/minus"
            android:scaleType="center" />
    </LinearLayout>

</LinearLayout>