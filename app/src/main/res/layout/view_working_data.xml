<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:padding="@dimen/mainPaddingTop_InNameModel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textMargin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model      : "
                android:textColor="@color/blackText"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/lbTextModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="12345"
                android:textColor="@color/blueText"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textMargin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line no.   : "
                android:textColor="@color/blackText"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/lbTextLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="12345"
                android:textColor="@color/blueText"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textMargin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emp no.  : "
                android:textColor="@color/blackText"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/lbTextEmpNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="12345"
                android:textColor="@color/blueText"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLotNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textMargin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lot no.    : "
                android:textColor="@color/blackText"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/lbLotNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="12345"
                android:textColor="@color/blueText"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddNG1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mainPaddingTop_InNameModel"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_add_ng1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/main_blue"
                android:text="@string/add_ng1"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

