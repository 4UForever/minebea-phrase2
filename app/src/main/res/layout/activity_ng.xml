<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="10">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include layout="@layout/view_working_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/white_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/mainPaddingTop"
        android:paddingRight="@dimen/mainPaddingTop">

        <include layout="@layout/view_expandable" />

        <!-- Model data-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgModel"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <include
                    layout="@layout/view_working_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_normal"
                    android:weightSum="10">

                    <CheckBox
                        android:id="@+id/check_continue_next_lot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/space_normal"
                        android:text="Continue on next lot?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeNormal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mainPaddingTop_InNameModel"
                    android:paddingTop="@dimen/space_normal"
                    android:text="Last lot on this shift?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_normal"
                    android:paddingTop="@dimen/space_normal"
                    android:weightSum="10">

                    <CheckBox
                        android:id="@+id/check_finish_wip_last_lot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/space_normal"
                        android:text="WIP"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeNormal" />

                    <EditText
                        android:id="@+id/edit_finish_wip_last_lot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@android:color/darker_gray"
                        android:enabled="false"
                        android:inputType="number"
                        android:paddingLeft="@dimen/space_normal"
                        android:paddingRight="@dimen/space_normal"
                        android:singleLine="true"
                        android:textSize="@dimen/textSizeNormal" />
                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/view_work_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="5" />

        </LinearLayout>

        <!-- NG list-->
        <include layout="@layout/view_ng_list" />

    </LinearLayout>

    <!-- done -->
    <LinearLayout
        android:id="@+id/btn_done_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/blueText"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/md_button_padding_frame_side">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>

</LinearLayout>
